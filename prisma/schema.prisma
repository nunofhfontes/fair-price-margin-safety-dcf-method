// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}


model Post {
  id        BigInt   @id @default(sequence())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  content   String?
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  BigInt
}

model Profile {
  id     BigInt  @id @default(sequence())
  bio    String?
  user   User    @relation(fields: [userId], references: [id])
  userId BigInt  @unique
}

model User {
  id          BigInt   @id @default(sequence())
  email       String   @unique
  name        String?
  posts       Post[]
  portfolios  Portfolio[]
  profile     Profile?
}

model Portfolio {
  id            BigInt   @id @default(sequence())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  title         String   @db.VarChar(255)
  description   String?
  published     Boolean  @default(false)
  author        User     @relation(fields: [authorId], references: [id])
  authorId      BigInt
  stocks        Stock[]
}

model Stock {
  id        BigInt   @id @default(sequence())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ticker    String
  analysis  Analysis
  analysisUpdatedAt DateTime @analysisUpdatedAt
  prices    Quote[]
}

model Analysis {
  id             BigInt  @id @default(sequence())
  description    String?
  fcf1y          BigInt
  fcf3y          BigInt
  fcf5y          BigInt
  fcfcagr        BigInt
  revenue1y      BigInt
  revenue3y      BigInt
  revenue5y      BigInt
}

model Quote {
  id        BigInt   @id @default(sequence())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ticker    String
  price     String
}